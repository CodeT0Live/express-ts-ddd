{
  "compilerOptions": {
    "target": "es6",                     
    "module": "commonjs",                    
    "outDir": "./build",                      
    "strict": true,
    "esModuleInterop": true,                 
    "skipLibCheck": true,  
    "lib": ["esnext"],
    "sourceMap": true,            
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["bin/*","src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}

